@using iCopy.Web.Helper
@using Enum = iCopy.Model.Enum.Enum
<!-- begin:: Aside -->
<button class="kt-aside-close " id="kt_aside_close_btn"><i class="la la-close"></i></button>
<div class="kt-aside  kt-aside--fixed  kt-grid__item kt-grid kt-grid--desktop kt-grid--hor-desktop" id="kt_aside">
    <!-- begin:: Aside -->
    <div class="kt-aside__brand kt-grid__item " id="kt_aside_brand">
        <div class="kt-aside__brand-logo">
            <a href="index.html">
                <img alt="Logo" src="~/assets/media/logos/icopy.png" />
            </a>
        </div>
    </div>
    <!-- end:: Aside -->
    <!-- begin:: Aside Menu -->
    <div class="kt-aside-menu-wrapper kt-grid__item kt-grid__item--fluid" id="kt_aside_menu_wrapper">
        <div id="kt_aside_menu" class="kt-aside-menu " data-ktmenu-vertical="1" data-ktmenu-scroll="1" data-ktmenu-dropdown-timeout="500">
            <ul class="kt-menu__nav ">
                <li is-visible="User.HasRole(Enum.Roles.Administrator)" class="kt-menu__item kt-menu__item--submenu" aria-haspopup="true" data-ktmenu-submenu-toggle="hover">
                    <a href="javascript:;" class="kt-menu__link kt-menu__toggle">
                        <span class="kt-menu__link-icon">
                            <i class="fa fa-map-marker-alt"></i>
                        </span>
                        <span class="kt-menu__link-text">@_sharedLocalizer.LocationSettings</span>
                        <i class="kt-menu__ver-arrow la la-angle-right"></i>
                    </a>
                    <div class="kt-menu__submenu " kt-hidden-height="200" style="display: none; overflow: hidden;">
                        <span class="kt-menu__arrow"></span>
                        <ul class="kt-menu__subnav">
                            <li class="kt-menu__item  kt-menu__item--parent" aria-haspopup="true">
                                <span class="kt-menu__link"><span class="kt-menu__link-text">@_sharedLocalizer.LocationSettings</span></span>
                            </li>
                            <li class="kt-menu__item " aria-haspopup="true">
                                <a href="@Settings.Routes.Country.Index" class="kt-menu__link ">
                                    <i class="kt-menu__link-bullet kt-menu__link-bullet--dot"><span></span></i>
                                    <span class="kt-menu__link-text">@_sharedLocalizer.Countries</span>
                                </a>
                            </li>
                            <li class="kt-menu__item " aria-haspopup="true">
                                <a href="@Settings.Routes.City.Index" class="kt-menu__link ">
                                    <i class="kt-menu__link-bullet kt-menu__link-bullet--dot"><span></span></i>
                                    <span class="kt-menu__link-text">@_sharedLocalizer.Cities</span>
                                </a>
                            </li>
                        </ul>
                    </div>
                </li>
                <li is-visible="User.HasRole(Enum.Roles.Administrator)" class="kt-menu__item" aria-haspopup="true">
                    <a href="@Settings.Routes.Company.Index" class="kt-menu__link ">
                        <span class="kt-menu__link-icon"><i class="fa fa-hotel"></i></span>
                        <span class="kt-menu__link-text">@_sharedLocalizer.CompanySettings</span>
                    </a>
                </li>
                <li is-visible="User.HasRoles(Enum.Roles.Administrator, Enum.Roles.Company)" class="kt-menu__item" aria-haspopup="true">
                    <a href="@Settings.Routes.Copier.Index" class="kt-menu__link ">
                        <span class="kt-menu__link-icon"><i class="fa fa-copy"></i></span>
                        <span class="kt-menu__link-text">@_sharedLocalizer.CopierSettings</span>
                    </a>
                </li>
                <li is-visible="User.HasRoles(Enum.Roles.Administrator, Enum.Roles.Company, Enum.Roles.Copier)" class="kt-menu__item" aria-haspopup="true">
                    <a href="@Settings.Routes.Employee.Index" class="kt-menu__link ">
                        <span class="kt-menu__link-icon"><i class="fa fa-people-carry"></i></span>
                        <span class="kt-menu__link-text">@_sharedLocalizer.EmployeeSettings</span>
                    </a>
                </li>

                <li is-visible="User.HasRole(Enum.Roles.Administrator)" class="kt-menu__item" aria-haspopup="true">
                    <a href="@Settings.Routes.User.Index" class="kt-menu__link ">
                        <span class="kt-menu__link-icon"><i class="fa fa-users-cog"></i></span>
                        <span class="kt-menu__link-text">@_sharedLocalizer.UserSettings</span>
                    </a>
                </li>
                <li class="kt-menu__item" aria-haspopup="true">
                    <a href="@Settings.Routes.PrintRequest.Index" class="kt-menu__link ">
                        <span class="kt-menu__link-icon"><i class="fa fa-copy"></i></span>
                        <span class="kt-menu__link-text">@_sharedLocalizer.PrintRequestSettings</span>
                    </a>
                </li>
            </ul>
        </div>
    </div>
    <!-- end:: Aside Menu -->
</div>
<!-- end:: Aside -->