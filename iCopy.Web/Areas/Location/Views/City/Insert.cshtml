@model iCopy.Model.Request.City
@{
    Layout = null;
}
<div class="modal-header">
    <h5 class="modal-title" id="exampleModalLabel">@_sharedLocalizer.AddCity</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close"></button>
</div>
<form asp-area="location" asp-controller="city" asp-action="insert" method="post" ajax-modal-form="true" asp-antiforgery="true" id="form">
    <div class="modal-body">
        <div class="form-group">
            <label>@_sharedLocalizer.Name:</label>
            <input asp-for="Name" type="text" class="form-control" placeholder="@_sharedLocalizer.Name">
            <span asp-validation-for="Name" class="form-text text-danger"></span>
        </div>
        <div class="form-group">
            <label>@_sharedLocalizer.ShortName:</label>
            <input asp-for="ShortName" type="text" class="form-control" placeholder="@_sharedLocalizer.ShortName">
            <span asp-validation-for="ShortName" class="form-text text-danger"></span>
        </div>
        <div class="form-group">
            <label>@_sharedLocalizer.Country:</label>
            <select asp-for="CountryID" asp-items="@(await _selectList.Countries())" class="form-control kt-select2" id="countries-select2"></select>
            <span asp-validation-for="CountryID" class="form-text text-danger"></span>
        </div>
        <div class="form-group">
            <label>@_sharedLocalizer.PostalCode:</label>
            <input asp-for="PostalCode" type="number" class="form-control" placeholder="@_sharedLocalizer.PostalCode">
            <span asp-validation-for="PostalCode" class="form-text text-danger"></span>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">@_sharedLocalizer.Close</button>
        <button type="submit" class="btn btn-primary">@_sharedLocalizer.SaveChanges</button>
    </div>
</form>
