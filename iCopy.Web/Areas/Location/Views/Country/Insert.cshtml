@model iCopy.Model.Request.Country
@{
    Layout = null;
}
<div class="modal-header">
    <h5 class="modal-title" id="exampleModalLabel">@_sharedLocalizer.AddCountry</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close"></button>
</div>
<form asp-area="location" asp-controller="country" asp-action="insert" method="post" ajax-modal-form="true" asp-antiforgery="true">
    <div class="modal-body">
        <div class="form-group">
            <label>@_sharedLocalizer.Name:</label>
            <input asp-for="Name" type="text" class="form-control" placeholder="@_sharedLocalizer.Name">
            <span asp-validation-for="Name" class="form-text text-danger"></span>
        </div>
        <div class="form-group">
            <label>@_sharedLocalizer.ShortName:</label>
            <input asp-for="ShortName" type="text" class="form-control" placeholder="@_sharedLocalizer.ShortName">
            <span asp-validation-for="ShortName" class="form-text text-danger"></span>
        </div>
        <div class="form-group">
            <label>@_sharedLocalizer.PhoneNumberRegex:</label>
            <input asp-for="PhoneNumberRegex" type="text" class="form-control" placeholder="@_sharedLocalizer.PhoneNumberRegex">
            <span asp-validation-for="PhoneNumberRegex" class="form-text text-danger"></span>
        </div>
        <div class="form-group">
            <label>@_sharedLocalizer.PhoneCode:</label>
            <input asp-for="PhoneNumberCode" type="number" class="form-control" placeholder="@_sharedLocalizer.PhoneCode">
            <span asp-validation-for="PhoneNumberCode" class="form-text text-danger"></span>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">@_sharedLocalizer.Close</button>
        <button type="submit" class="btn btn-primary">@_sharedLocalizer.SaveChanges</button>
    </div>
</form>