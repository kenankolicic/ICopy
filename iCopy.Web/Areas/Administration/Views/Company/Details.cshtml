@model iCopy.Model.Response.Company
@{
    Layout = null;
}
<div class="modal-header">
    <h5 class="modal-title" id="exampleModalLabel">@_sharedLocalizer.Details</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close"></button>
</div>
<div class="modal-body">
    <ul class="nav nav-tabs  nav-tabs-line nav-tabs-line-brand" role="tablist">
        <li class="nav-item">
            <a class="nav-link active" data-toggle="tab" href="#company_details" role="tab"><i class="flaticon-home"></i> @_sharedLocalizer.CompanyDetails</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" data-toggle="tab" href="#account_details" role="tab"><i class="flaticon-avatar"></i> @_sharedLocalizer.AccountDetails</a>
        </li>
    </ul>
    <div class="tab-content">
        <div class="tab-pane active" id="company_details" role="tabpanel">
            <div class="row">
                <div class="col-xl-6">
                    <div class="form-group">
                        <label>@_sharedLocalizer.Name</label>
                        <input class="form-control" type="text" disabled asp-for="Name" />
                    </div>
                </div>
                <div class="col-xl-6">
                    <div class="form-group">
                        <label>@_sharedLocalizer.JIB</label>
                        <input class="form-control" type="text" disabled asp-for="Jib" />
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-xl-6">
                    <div class="form-group">
                        <label>@_sharedLocalizer.ContactAgent</label>
                        <input class="form-control" type="text" disabled asp-for="ContactAgent" />
                    </div>
                </div>
                <div class="col-xl-6">
                    <div class="form-group">
                        <label>@_sharedLocalizer.ContactAgentPhoneNumber</label>
                        <input class="form-control" type="text" disabled asp-for="PhoneNumber"/>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-xl-6">
                    <div class="form-group">
                        <label>@_sharedLocalizer.City</label>
                        <input class="form-control" type="text" disabled asp-for="City.Name" />
                    </div>
                </div>
                <div class="col-xl-6">
                    <div class="form-group">
                        <label>@_sharedLocalizer.Address</label>
                        <input class="form-control" type="text" disabled asp-for="Address" />
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-xl-6">
                    <div class="form-group">
                        <label>@_sharedLocalizer.ContactEmail</label>
                        <input class="form-control" type="text" disabled asp-for="Email" />
                    </div>
                </div>
            </div>
        </div>
        <div class="tab-pane" id="account_details" role="tabpanel">
            <div class="row">
                <div class="col-md-4">
                    <img src="~/@(Model?.ProfilePhoto?.Path ?? Settings.Defaults.Photo.ProfilePhoto)"/>
                </div>
                <div class="col-md-8 pl-5">
                    <div class="form-group">
                        <label>@_sharedLocalizer.Username</label>
                        <input class="form-control" type="text" disabled asp-for="User.Username" />
                    </div>
                    <div class="form-group">
                        <label>@_sharedLocalizer.Email</label>
                        <input class="form-control" type="text" disabled asp-for="User.Email" />
                    </div>
                    @if (Model.User.LockoutEnd.HasValue)
                    {
                        <div class="form-group">
                            <label>@_sharedLocalizer.LockoutEnd</label>
                            <input class="form-control" type="text" disabled asp-for="User.LockoutEnd" />
                        </div>
                    }
                    @if (Model.User.EmailConfirmed)
                    {
                        <span class="kt-badge kt-badge--inline kt-badge--success">@_sharedLocalizer.EmailConfirmed</span>
                    }
                    else
                    {
                        <span class="kt-badge kt-badge--inline kt-badge--danger">@_sharedLocalizer.EmailNotConfirmed</span>
                    }
                    @if (Model.User.PhoneNumberConfirmed)
                    {
                        <span class="kt-badge kt-badge--inline kt-badge--success">@_sharedLocalizer.PhoneNumberConfirmed</span>
                    }
                    else
                    {
                        <span class="kt-badge kt-badge--inline kt-badge--danger">@_sharedLocalizer.PhoneNumberNotConfirmed</span>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-dismiss="modal">@_sharedLocalizer.Close</button>
</div>
