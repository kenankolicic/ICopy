@model iCopy.Model.Request.Login
@{
    Layout = "~/Views/Shared/_LayoutAuth.cshtml";
    ViewData["Title"] = _sharedLocalizer.Login;
}
<!--begin::Head-->
<div class="kt-login__head">
    <span class="kt-login__signup-label">Don't have an account yet?</span>&nbsp;&nbsp;
    <a href="@Settings.Routes.SignUp.Index" class="kt-link kt-login__signup-link">@_sharedLocalizer.SignUp!</a>
</div>

<!--end::Head-->
<!--begin::Body-->
<div class="kt-login__body">
    <!--begin::Signin-->
    <div class="kt-login__form">
        <div class="kt-login__title">
            <h3>@_sharedLocalizer.Login</h3>
        </div>
        @if(TempData["success"] != null)
        {
            <div class="alert alert-success" role="alert">
                <div class="alert-text">@TempData["success"]</div>
                <div class="alert-close">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true"><i class="la la-close"></i></span>
                    </button>
                </div>
            </div>
        }
        @if (TempData["error"] != null)
        {
            <div class="alert alert-danger" role="alert">
                <div class="alert-text">@TempData["error"]</div>
                <div class="alert-close">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true"><i class="la la-close"></i></span>
                    </button>
                </div>
            </div>
        }
        <!--begin::Form-->
        <form class="kt-form" asp-controller="login" asp-action="index" asp-antiforgery="true" method="post">
            <div class="form-group">
                <input class="form-control" type="text" placeholder="@_sharedLocalizer.UsernameOrEmail" asp-for="Username" autocomplete="off">
                <span asp-validation-for="Username" class="form-text text-danger"></span>
            </div>
            <div class="form-group">
                <input class="form-control" type="password" placeholder="@_sharedLocalizer.Password" asp-for="Password" />
                <span asp-validation-for="Password" class="form-text text-danger"></span>
            </div>
            <!--begin::Action-->
            <div class="kt-login__actions">
                <a href="#" class="kt-link kt-login__link-forgot">
                    @_sharedLocalizer.ForgotPassword ?
                </a>
                <button id="kt_login_signin_submit" class="btn btn-brand">@_sharedLocalizer.Login</button>
            </div>
            <!--end::Action-->
        </form>
        <!--end::Form-->
        <!--begin::Divider-->
        <div class="kt-login__divider">
            <div class="kt-divider">
                <span></span>
                <span>@_sharedLocalizer.OR.ToUpper()</span>
                <span></span>
            </div>
        </div>
        <!--end::Divider-->
        <!--begin::Options-->
        <div class="kt-login__options">
            <a href="#" class="btn btn-primary kt-btn">
                Microsoft
            </a>
            &nbsp;&nbsp;
            <a href="#" class="btn btn-danger kt-btn">
                Google
            </a>
        </div>
        <!--end::Options-->
    </div>

    <!--end::Signin-->
</div>
